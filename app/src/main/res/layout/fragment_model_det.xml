<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_margin="10dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_image_det"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorSplash"
            />

        <TextView
            android:id="@+id/user_name_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:layout_toRightOf="@+id/user_profile_image_det"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSplash"

            />



        <ImageView
            android:id="@+id/img_det"
            android:layout_below="@+id/user_profile_image_det"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/model2"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            />



        <RelativeLayout
            android:id="@+id/container_name_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_det"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/model_name_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="model Name"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:textColor="@color/colorSplash"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/model_price_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 $"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textColor="@color/myColor"
                android:textStyle="bold"
                />



        </RelativeLayout>


        <TextView
            android:id="@+id/desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@+id/container_name_price"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/desc_model_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Description Description Description Description Description Description Description Description Description Description "
            android:layout_below="@+id/desc_title"
            android:textSize="18dp"
            android:textColor="@color/colorSplash"
            android:layout_marginTop="5dp"
            />



        <RelativeLayout
            android:id="@+id/container_btn_det"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/desc_model_det"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/location_btn_det"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:text="View Location"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttons2"

                    />

                <Button
                    android:id="@+id/call_btn_det"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:text="Call"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/buttons2"

                    />


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</ScrollView>