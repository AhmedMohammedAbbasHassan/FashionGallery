<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_card"
        >
    <ImageView
        android:id="@+id/img_my_model"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/model"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

        <TextView
            android:id="@+id/title_my_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Dress"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorSplash"
            android:layout_toRightOf="@+id/img_my_model"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/price_my_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50$"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/myColor"
            android:layout_below="@+id/title_my_model"
            android:layout_toRightOf="@+id/img_my_model"
            android:layout_marginLeft="10dp"
            />


        <Button
            android:id="@+id/delete_btn_my_model"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_cross_circular_button_outline"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            />
    </RelativeLayout>




</android.support.v7.widget.CardView>