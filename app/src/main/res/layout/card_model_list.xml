<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        
        
        <ImageView
            android:id="@+id/model_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/model2"
            android:scaleType="fitCenter"

            />

        <RelativeLayout
            android:id="@+id/title_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/model_img"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Dress"
                android:textSize="20sp"
                android:textColor="@color/colorSplash"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 $"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:textColor="@color/myColor"

                />


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_relative"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                                >
                <Button
                    android:id="@+id/like_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_like"
                    android:layout_marginRight="15dp"
                    />

                <Button
                    android:id="@+id/favorite_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_loving_heart"
                    android:layout_marginLeft="15dp"
                    />


            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>